/* components/epsolider/epsolider.wxss */

.container {
  display: inline-flex;
  flex-direction: row;
  height: 60rpx;
}

.leftContent {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.noStyle {
  font-size: 32rpx;
}

.numStyle {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: solid 1px black;
}

.dateStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.year {
  font-size: 20rpx;
}

.mouth {
  font-size: 24rpx;
  line-height: 24rpx;
}
