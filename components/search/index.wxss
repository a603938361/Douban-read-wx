/* components/search/index.wxss */

.container {
    display: inline-flex;
    flex-direction: column;
    /* justify-content: space-between; *//* align-items: center; */
}

.header {
    margin-left: 10rpx;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 100;
    background-color: white;
}

.search-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 650rpx;
    height: 68rpx;
    border-radius: 50rpx;
    background-color: #f5f5f5;
}

.search-container image {
    width: 28rpx;
    height: 28rpx;
    margin-left: 20rpx;
}

.bar {
    margin-left: 20rpx;
    width: 500rpx;
}

.in-bar {
    color: #858282;
}

.cancel {
    width: 100rpx;
    margin-left: 15rpx;
}

.keyword-container {
    position: relative;
    top: 130rpx;
}

.hostory {
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
}

.title {
    display: flex;
    flex-direction: row;
    margin-left: 20rpx;
    align-items: center;
}

.title text {
    margin-left: 10rpx;
}

.chunk {
    width: 10rpx;
    height: 40rpx;
    background-color: black;
}

.tag {
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
    flex-wrap: wrap;
    width: 710rpx;
}

.tag o-tag {
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.books-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 90rpx;
    margin-top: 80rpx;
    flex-wrap: wrap;
    justify-content: space-between;
}

.no-book-container {
    display: flex;
    flex-direction: column;
    margin-top: 300rpx;
    justify-content: center;
    align-items: center;
    width: 750rpx;
}
