.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.header {
  /* background-color: rebeccapurple */
}

.header-bg-img {
  width: 100%;
  height: 573rpx;
}

.button {
  position: relative;
  top: 230rpx;
  left: 300rpx;
}

.icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 230rpx;
  left: 300rpx;
}

.icon image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.header-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  top: 450rpx;
  width: 100%
}

.sub-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.sub-view image {
  width: 34rpx;
  height: 34rpx;
}

.sub-view text {
  font-size: 28rpx;
}

.text1 {
  margin-top: 10rpx;
}

.like-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: -30rpx;
}

.like-img {
  width: 97rpx;
  height: 42rpx;
  margin-top: 40rpx;
}

.bottom-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 50rpx;
  margin-top: 40rpx;
}

.item {
  margin-bottom: 20rpx;
}


.avatar {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
}
